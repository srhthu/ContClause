{
    "train_batch_size": 64,
    "train_micro_batch_size_per_gpu": 64,
    "steps_per_print": 1000,
    "prescale_gradients": false,
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 1e-4,
        "weight_decay": 0.01
      }
    },
    "gradient_clipping": 3.0,
  
    "bf16": {
      "enabled": true,
      "loss_scale": 0
    },

    "zero_optimization": {
        "stage": 1,
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": "auto",
        "contiguous_gradients": true
    }
}